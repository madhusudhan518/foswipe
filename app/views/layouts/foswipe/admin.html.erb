<!DOCTYPE html>
<html>
	<head>
		<title>Ticketing System</title>
		<%= stylesheet_link_tag    "application", media: "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>

	</head>
	<body>

		
	<div class="container">
			<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">

				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#">Ticketing System</a>
				</div>
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav">

						
						<li class="<%= 'active' if request.params[:controller] == 'admin/tickets' %>">
							<a href="/admin/tickets">Home</a>
						</li>
						
						
						

						<li>
							<a href="#about">About</a>
						</li>
						<li>
							<a href="#contact">Contact</a>
						</li>
					</ul>
					<p class="navbar-text pull-right">
						Logged in as <strong><%= current_user.email %></strong>.
						<%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
						<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
					</p>
				</div><!--/.nav-collapse -->

			</div>

			<div style = "margin-top :70px;" >

				<div class="container-fluid">
					<div class="row">
						<div class="col-sm-3 col-md-2 sidebar">
							<ul class="nav nav-sidebar">
								<li class="active">
									<a href="<%= admin_tickets_path %>">Tickets</a>
								</li>
								<li>
									<a href="<%= admin_admins_path %>">Admins</a>
								</li>
								<li>
									<a href="<%= admin_clients_path %>">Clients</a>
								</li>
								<li>
									<a href="<%= admin_supports_path %>">Support Members</a>
								</li>
								<li>
									<a href="<%= admin_organizations_path %>">Organizations</a>
								</li>
								<li>
									<a href="<%= admin_products_path %>">Products</a>
								</li>
								<li>
									<a href="<%= admin_purchases_path %>">Purchases</a>
								</li>
								<li>
									<a href="<%= admin_users_path %>">Users</a>
								</li>
							</ul>
						</div>
						<div class="col-sm-9">
							<%= yield %>
						</div>
					</div>

				</div>

			</div>
	</div>
	</body>
</html>
